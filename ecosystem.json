{
  "apps": [
    {
      "name": "uchat",
      "script": "./build/server.js",
      "args": "./build/server.js",
      "interpreter": "node",
      "watch": true,
      "node_args": "--harmony",
      "merge_logs": true,
      "post_update": [
        "npm run dev"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "env_production": {
        "NODE_ENV": "production"
      },
      "env_testing": {
        "NODE_ENV": "testing"
      },
      "env_staging": {
        "NODE_ENV": "staging"
      },
      "env_local": {
        "NODE_ENV": "local"
      }
    }
  ]
}